.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background: #04b4ae;
}

.avatar {
  margin-top: 160rpx;
  width: 200rpx;
  height: 200rpx;
}

.welcome {
  margin-top: 160rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #0b2f3a;
}

.moto-container {
  margin-top: 200rpx;
  border: 1px solid #0b2f3a;
  width: 220rpx;
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
}

.moto {
  font-size: 30rpx;
  line-height: 80rpx;
  color: #0b2f3a;
  letter-spacing: 3px;
}
