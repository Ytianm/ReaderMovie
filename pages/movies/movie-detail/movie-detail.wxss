@import '../stars/stars-template.wxss';

.head-img-container{
  overflow: hidden;  /*blur后的边缘处理*/
}

.head-img {
  width: 100%;
  height: 320rpx;
  filter: blur(10px);
}

.head-img-hover {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50rpx;
  left: 40rpx;
}

.main-title {
  font-size: 19px;
  letter-spacing: 3px;
  color: #fff;
  margin-bottom: 30rpx;
}

.sub-title {
  color: #f5f5f5;
  font-size: 25rpx;
  margin-bottom: 60rpx;
}

.like {
  font-size: 26rpx;
}

.like-font {
  margin: 0 20rpx;
  color: #d5d5d5;
}

.wish-count {
  color: #f50;
}

.comment-count {
  color: #f50;
}

.movie-img {
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  width: 190rpx;
}

.abstract {
  margin: 20rpx 0 60rpx 30rpx;
}

.original-title {
  margin-bottom: 30rpx;
  font-size: 35rpx;
  color: #000;
  font-weight: bold;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.mark {
  color: #aaa;
  margin-right: 25rpx;
}

.hr-line {
  width: 100%;
  height: 1px;
  background: #ccc;
}

.summary {
  padding: 50rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.summary-title {
  margin-bottom: 25rpx;
  font-size: 28rpx;
  color: #aaa;
}

.summary-content {
  letter-spacing: 3px;
  line-height: 50rpx;
}

.casts {
  display: flex;
  flex-direction: column;
  margin: 50rpx 0 25rpx 30rpx;
}

.casts-title {
  margin-bottom: 25rpx;
  font-size: 28rpx;
  color: #aaa;
}

.castsInfo{
  white-space: nowrap;
}
.cast{
  display: inline-flex;
  flex-direction: column;
  text-align: center;
  width: 170rpx;
  white-space: normal;
  margin-right: 10rpx;
}

.cast-avatar{
  width: 170rpx;
  height: 210rpx;
}

.cast-name{
  margin: 10rpx auto 0;
}