@import 'movie-list/movie-list-template.wxss';
@import 'movie-grid/movie-grid-template.wxss';

.search{
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f5f5f5;
  height: 80rpx;
  width: 750rpx;
}

.search-icon{
  width: 40rpx;
  padding-left: 20rpx;
}

.search input{
  height: 60rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
  flex-grow: 1;
  border-radius: 8rpx;
}

.search-cancel{
  margin: auto 20rpx;
}

.placeholder{
  color: #d1d1d1;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}

.movie-template-container{
  background: #f5f5f5;
}

.movie-list-template{
  margin-bottom: 30rpx;
}