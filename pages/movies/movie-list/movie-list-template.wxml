<import src='../movie/movie-template.wxml' />

<template name='movieListTemplate'>
  <view class='movie-list-container'>
    <view class='inner-container'>
      <view class='movie-list-head'>
        <text class='slogan'>{{title}}</text>
        <view class='more'catch:tap="onMoreTap" data-category="{{title}}">
          <text class='more-text'>更多</text>
          <image class='more-icon' src='/images/icon/arrow-right.png'></image>
        </view>
      </view>
      <view class='movies-container'>
        <block wx:for="{{movies}}" wx:for-item="movie" wx:key="{{movie.movieId}}">
          <template is='movieTemplate' data="{{...movie}}" />
        </block>
      </view>
    </view>
  </view>
</template>