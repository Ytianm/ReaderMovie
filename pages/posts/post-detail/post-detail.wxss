.container {
  display: flex;
  flex-direction: column;
  /* height: 100%; */
}

.head-img {
  width: 100%;
  height: 430rpx;
  margin-bottom: 20rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.post-info {
  flex-direction: row;
  margin-bottom: 10px;
}

.post-author-avatar {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.post-author {
  font-size: 30rpx;
  font-weight: 400;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #666;
}

.post-info-text {
  margin-right: 10rpx;
  font-size: 25rpx;
  color: #999;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  margin-left: 40rpx;
  color: #4b556c;
}

.collection-share-wrapper {
  margin-top: 30px;
}

.collection-share-icon {
  float: right;
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.line {
  height: 1px;
  width: 660rpx;
  background: #e5e5e5;
  margin: 0 auto;
  vertical-align: middle;
  position: relative;
  top: 40rpx;
  z-index: -1;
}

.detail-content {
  margin: 20rpx 30rpx 0;
  line-height: 44rpx;
  letter-spacing: 2px;
  color: #666;
}
